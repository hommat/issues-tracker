<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean
            id="issueEventProducer"
            class="org.example.issuestracker.issues.command.infrastructure.event.IssueEventProducer"
    />

    <bean
        id="issueEventStoreRepository"
        class="org.example.issuestracker.issues.command.infrastructure.event.InMemoryIssueEventStoreRepository"
    />

    <bean
        id="issueEventStore"
        class="org.example.issuestracker.issues.command.infrastructure.event.IssueEventStore"
    >
        <constructor-arg ref="issueEventStoreRepository" />
        <constructor-arg ref="issueEventProducer" />
    </bean>

    <bean
        id="issueEventSourcingHandler"
        class="org.example.issuestracker.issues.command.infrastructure.event.IssueEventSourcingHandler"
    >
        <constructor-arg ref="issueEventStore"/>
    </bean>

    <bean
            id="commandDispatcher"
            class="org.example.issuestracker.issues.command.infrastructure.command.IssueCommandDispatcher"
    />

    <bean
        id="commandGateway"
        class="org.example.issuestracker.issues.command.infrastructure.command.IssueCommandGateway"
    >
        <constructor-arg ref="commandDispatcher" />
        <constructor-arg ref="openIssueCommandHandler" />
    </bean>

    <bean
        id="openIssueCommandHandler"
        class="org.example.issuestracker.issues.command.command.handler.OpenIssueCommandHandler"
    >
        <constructor-arg ref="issueEventSourcingHandler"/>
    </bean>
</beans>